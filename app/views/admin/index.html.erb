
<div class="affiliate-portal-item">
  <table style="width:100%">
    <tr>
      <th><strong>Image</strong></th>
      <th><strong><%= sortable "sex" %></strong></th>
      <th><%= sortable "brand" %></th>
      <th><strong><%= sortable "description" %></strong></th>
      <th><strong><%= sortable "shipped_from" %></strong></th>
      <th><strong><%= sortable "price" %></strong></th>
      <th><strong><%= sortable "sale", "On Sale" %></strong></th>
      <th><strong>Action</strong></th>
    </tr>
    <% @all_items.each do |item| %>
      <tr>
        <td><%= image_tag item.item_image.url(:thumb), class: "thumbnail" %></td>
        <td><%= item.sex %></td>
        <td><%= item.brand %></td>
        <td><%= item.description.slice(0..40) %></td>
        <td><%= item.shipped_from %></td>
        <td>$<%= item.price %></td>
        <td>
          <%if item.sale == false %>
            <%= 'No' %>
          <% else %>
            <%= 'Yes' %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_admin_path(item.id) %></td>
        <td><%= link_to 'Delete', admin_path(item.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
        <td><%= link_to 'Show', admin_path(item) %></td>
      </tr>
    <% end %>
  </table>

</div>

