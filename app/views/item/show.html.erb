<div class="container mobile_container" style="padding: 0px;">
  <div class="row" style="margin: 0px; padding: 0px;">
    <h1 class="your-items-main mob-ul">More You Might Like...</h1>
    <%= render "templates/horizontal_line" %>
    <% @more_you_might_like.each do |more_items| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <a href="/item/<%= more_items.id %>">
            <%= image_tag more_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if more_items.sale == true %>
                <table>
                  <tr class="specials_table">
                  <td><strike><em>$<%= zeros(more_items.price) %></em></strike></td>
                  <td>$<%= zeros(more_items.sale_price) %></td>
                  </tr>
                </table>
              <% else %>
                <table>
                  <tr class="normal_table">
                  <td>$<%= zeros(more_items.price) %></td>
                  </tr>
                </table>
              <% end %>
              <p><%= more_items.short_description %></p>
              <p><%= word_branding(more_items.brand) %></p>
            </div>
          </a>
          </div>
        </div>
    <% end %>
  </div>
</div>