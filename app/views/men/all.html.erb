<%= render "templates/mobile_nav/navigation_mens" %>
<%= render "templates/mobile_nav/mobile_navigation_sliding_div_mens" %>
<%= render "templates/mens/navigation/navigation" %>

<div class="all_hero_mens"></div>
<div class="desktop-categories"><h1>All Men's</h1></div>
<div class="container mobile_container">
  <div class="row">
    <h1 class="your-items">All Men's</h1>
    <% @mens.each do |all| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <% if all.class == FashionItem %>
            <a href="/item/<%= all.id %>">
              <%= image_tag all.item_image.url(:medium) %>
              <div class="description_content">
                <% if all.sale == true %>
                  <table>
                    <tr class="specials_table">
                    <td><strike><em>$<%= zeros(all.price) %></em></strike></td>
                    <td>$<%= zeros(all.sale_price) %></td>
                    </tr>
                  </table>
                <% else %>
                  <table>
                    <tr class="normal_table">
                    <td>$<%= zeros(all.price) %></td>
                    </tr>
                  </table>
                <% end %>
                <p><%= all.short_description %></p>
                <p><%= word_branding(all.brand) %></p>
              </div>
            </a>
          <% elsif all.class == ShopTheLookImage %>
            <a href="/shop_the_look_images/<%= all.id %>">
              <%= image_tag all.shop_look_image.url(:medium) %>
              <div class="description_content">
                <table>
                  <tr class="shop_look_table">
                  </tr>
                </table>
                <div class="shop-the-look-description">
                  <h2>Shop The Look</h2>
                  <p><%= word_branding(all.shop_the_look_items.first.brand) %></p>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'templates/footer/footer' %>