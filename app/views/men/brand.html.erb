<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>
<div class="menu-side">
  <%= render "templates/side_navigation_mens" %>
</div><br>
<div class="col-lg-4 col-md-4 col-sm-2 col-xs-0"></div>
  <div class="col-lg-4 col-md-4 col-sm-2 col-xs-0">
    <%= form_tag search_brand_path do %>
      <div class="input-group">
        <input name="query" type="text" class="form-control" placeholder="Search for brands">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Search</button>
        </span>
      </div>
    <% end %>
  </div>
<div class="col-lg-4 col-md-4 col-sm-2 col-xs-0"></div><br><br><br>
<div class="container">
  <div class="row" style="margin-left: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_mens_subcat" %>
    </div>
    <h1 class="your-items">Brands</h1>
      <% @all_mens.each do |all_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12">
          <div class="image_div">
            <a href="/item/<%= all_items.id %>">
              <%= image_tag all_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if all_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= zeros(all_items.price) %></em></strike></td>
                  <td>$<%= zeros(all_items.sale_price) %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= zeros(all_items.price) %></td>
                </tr>
              </table>
              <% end %>
              <p><%= all_items.short_description %></p>
              <p><%= word_branding(all_items.brand) %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'templates/mail_chimp_form_mens' %>