<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>

<div class="menu-side">
  <div class="margin_menu_side"></div>
  <%= render "templates/side_navigation_mens" %>
</div>
<div class="container">
  <div class="row">
    <div class="item_navigation">
      <%= render "templates/item_navigation_mens_subcat" %>
    </div>
    <h1 class="your-items">Formal</h1>
      <% @formal.each do |formal_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12">
          <div class="image_div">
            <a href="/item/<%= formal_items.id %>">
              <%= image_tag formal_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if formal_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= zeros(formal_items.price) %></em></strike></td>
                  <td>$<%= zeros(formal_items.sale_price) %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= zeros(formal_items.price) %></td>
                </tr>
              </table>
              <% end %>
              <p><%= formal_items.short_description %></p>
              <p><%= formal_items.brand %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>