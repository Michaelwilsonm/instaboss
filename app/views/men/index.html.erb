    <% if @staff_picked_men.length >= 1 %>
      <h1 class="your-items">Staff Picks</h1>
      <%= render "templates/staff_picked_mens" %>
    <% end %>
  </div>
</div>






<div class="container">
  <div class="row">
    <div class="col-md-2 col-sm-3 col-xs-3"></div>
