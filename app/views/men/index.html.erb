<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>

<div class="logo-image">
  <img src="../assets/BEEEE.jpg" alt="" class="image_bee">
  <h2>MENS</h2>
</div>
<div class="item_navigation_top_mens">
  <%= render "templates/item_navigation_mens" %>
</div>


<div class="container" style="padding: 0px; margin: 0px; width: 98.8%;">
  <div class="row">
    <div class="mens_main_photo">
    </div>
  </div>
</div>


<h1 class="your-items">Mens Sale</h1>
<div class="mens-main-menu-side">
  <%= render "templates/side_navigation_mens" %>
</div>
<div class="container">
  <div class="row">
    <%= render "templates/on_sale_nine" %>
    <% if @featured_men.length >= 1 %>
      <h1 class="your-items">Mens Featured</h1>
      <%= render "templates/featured_mens" %>
