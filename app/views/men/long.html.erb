<div class="search_bar">
  <%= render "templates/men_side_search_bar" %>
</div>
<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>

<div class="item_navigation_top_mens">
  <%= render "templates/item_navigation_mens" %>
</div>
<div class="container" style="padding: 0px; margin: 0px; width: 98.8%;">
  <div class="row">
    <div class="long_hero_mens">
    </div>
  </div>
</div>


<div class="menu-side">
  <div class="margin_menu_side"></div>
  <%= render "templates/side_nav_mens_main" %>
</div>
<div class="container" style="padding: 0px;">
  <div class="row" style="margin: 0px; padding: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_mens_subcat" %>
    </div><br>
    <h1 class="your-items">Longs</h1>
    <div class="item_sub_cat">
      <%= render "templates/long_sub_cat_mens" %>
    </div>
      <% @long.each do |long_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12 <%= long_items.sub_category %>">
          <div class="image_div">
            <a href="/item/<%= long_items.id %>">
              <%= image_tag long_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if long_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= zeros(long_items.price) %></em></strike></td>
                  <td>$<%= zeros(long_items.sale_price) %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= zeros(long_items.price) %></td>
                </tr>
              </table>
              <% end %>
              <p><%= long_items.short_description %></p>
              <p><%= word_branding(long_items.brand) %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'templates/mail_chimp_form_mens' %>