<div class="container">
  <div class="row">
    <%= render "templates/side_navigation_mens" %>
    <div class="col-sm-1 col-xs-1"></div>
    <div class="col-md-10 col-sm-8 col-xs-8" style="padding: 0px;">
      <% @top.each do |top_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12">
          <div class="image_div">
            <a href="/item/<%= top_items.id %>">
              <%= image_tag top_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if top_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= top_items.sale_price %></em></strike></td>
                  <td>$<%= top_items.price %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= top_items.price %></td>
                </tr>
              </table>
              <% end %>
              <p><%= top_items.short_description %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>