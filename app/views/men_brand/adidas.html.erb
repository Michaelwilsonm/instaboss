<div class="search_bar">
  <%= render "templates/men_side_search_bar" %>
</div>
<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
  <%= render "templates/navigation_mobile_mens" %>
<% end %>
<%= render "/templates/mobile_navigation_sliding_div_mens" %>
<div class="item_navigation_top_mens">
  <%= render "templates/item_navigation_mens" %>
</div>
<div class="container" style="padding: 0px; margin: 0px; width: 98.8%;">
  <div class="row">
    <div class="adidas_mens">
    </div>
  </div>
</div>
<div class="menu-side">
  <%= render "templates/side_navigation_mens_extra_margin" %>
</div>
<div class="container mobile_container" style="padding: 0px;">
  <div class="row" style="margin: 0px; padding: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_mens_subcat" %>
    </div>
    <h1 class="your-items mob-ul">Adidas Originals</h1>
    <%= render "templates/horizontal_line" %>
    <% @adidas.each do |adidas_items| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <% if adidas_items.class == FashionItem %>
            <a href="/item/<%= adidas_items.id %>">
              <%= image_tag adidas_items.item_image.url(:medium) %>
              <div class="description_content">
                <% if adidas_items.sale == true %>
                  <table>
                    <tr class="specials_table">
                    <td><strike><em>$<%= zeros(adidas_items.price) %></em></strike></td>
                    <td>$<%= zeros(adidas_items.sale_price) %></td>
                    </tr>
                  </table>
                <% else %>
                  <table>
                    <tr class="normal_table">
                    <td>$<%= zeros(adidas_items.price) %></td>
                    </tr>
                  </table>
                <% end %>
                <p><%= adidas_items.short_description %></p>
                <p><%= word_branding(adidas_items.brand) %></p>
              </div>
            </a>
          <% elsif adidas_items.class == ShopTheLookImage %>
            <a href="/shop_the_look_images/<%= adidas_items.id %>">
              <%= image_tag adidas_items.shop_look_image.url(:medium) %>
              <div class="description_content">
                <table>
                  <tr class="shop_look_table">
                  </tr>
                </table>
                <div class="shop-the-look-description">
                  <h2>Shop The Look</h2>
                  <p><%= word_branding(adidas_items.shop_the_look_items.first.brand) %></p>
                  </div>
              </div>
            </a>
          <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
<%= render 'templates/mail_chimp_form_mens' %>