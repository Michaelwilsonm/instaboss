<div class="search_bar">
  <%= render "templates/men_side_search_bar" %>
</div>
<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>
<div class="item_navigation_top_mens">
  <%= render "templates/item_navigation_mens" %>
</div>
<div class="container" style="padding: 0px; margin: 0px; width: 98.8%;">
  <div class="row">
    <div class="new_balance_mens">
    </div>
  </div>
</div>
<div class="mens-main-menu-side">
  <%= render "templates/side_navigation_mens" %>
</div>
<div class="container mobile_container" style="padding: 0px;">
  <div class="row" style="margin: 0px; padding: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_mens_subcat" %>
    </div>
    <h1 class="your-items">New Balance</h1>
    <%= render "templates/horizontal_line" %>
    <% @new_balance.each do |new_balance_items| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <a href="/item/<%= new_balance_items.id %>">
            <%= image_tag new_balance_items.item_image.url(:medium) %>
          <div class="description_content">
            <% if new_balance_items.sale == true %>
            <table>
              <tr class="specials_table">
                <td><strike><em>$<%= zeros(new_balance_items.price) %></em></strike></td>
                <td>$<%= zeros(new_balance_items.sale_price) %></td>
              </tr>
            </table>
            <% else %>
            <table>
              <tr class="normal_table">
                <td>$<%= zeros(new_balance_items.price) %></td>
              </tr>
            </table>
            <% end %>
            <p><%= new_balance_items.short_description %></p>
            <p><%= word_branding(new_balance_items.brand) %></p>
          </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'templates/mail_chimp_form_mens' %>