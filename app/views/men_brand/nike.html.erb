<%= render "templates/mobile_nav/navigation_mens" %>
<%= render "templates/mobile_nav/mobile_navigation_sliding_div_mens" %>
<%= render "templates/mens/navigation/navigation" %>
<div class="nike_mens"></div>
<div class="desktop-categories"><h1>Nike</h1></div>
<div class="container mobile_container">
  <div class="row">
    <h1 class="your-items mob-ul">Nike</h1>
    <% @nike.each do |nike_items| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <% if nike_items.class == FashionItem %>
            <a href="/item/<%= nike_items.id %>">
              <%= image_tag nike_items.item_image.url(:medium) %>
              <div class="description_content">
                <% if nike_items.sale == true %>
                  <table>
                    <tr class="specials_table">
                    <td><strike><em>$<%= zeros(nike_items.price) %></em></strike></td>
                    <td>$<%= zeros(nike_items.sale_price) %></td>
                    </tr>
                  </table>
                <% else %>
                  <table>
                    <tr class="normal_table">
                    <td>$<%= zeros(nike_items.price) %></td>
                    </tr>
                  </table>
                <% end %>
                <p><%= nike_items.short_description %></p>
                <p><%= word_branding(nike_items.brand) %></p>
              </div>
            </a>
          <% elsif nike_items.class == ShopTheLookImage %>
            <a href="/shop_the_look_images/<%= nike_items.id %>">
              <%= image_tag nike_items.shop_look_image.url(:medium) %>
              <div class="description_content">
                <table>
                  <tr class="shop_look_table">
                  </tr>
                </table>
                <div class="shop-the-look-description">
                  <h2>Shop The Look</h2>
                  <p><%= word_branding(nike_items.shop_the_look_items.first.brand) %></p>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'templates/footer/footer' %>