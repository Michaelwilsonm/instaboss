<div class="nested-fields">
   <div class="col-md-4">
      <span>description</span>

      <%= f.text_field :description, required: 'true', class: 'form-control item-shop-the-look' %>

      <span>category</span>
      <%= f.select "category", options_for_select(""), {}, { autofocus: 'true', class: 'form-control input-sm cat-look' } %>

      <span>sub-category</span>
      <%= f.select "sub_category", options_for_select(""), {}, { autofocus: 'true', class: 'form-control input-sm' } %>

      <span>brand</span>
      <%= f.text_field :brand, class: 'form-control' %>

      <span>Recommended Retail Price ($US)</span>
      <label class="sr-only" for="exampleInputAmount">Sell Price ($US)</label>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.number_field "price", :step => 'any', class: 'form-control fashion-item-price',  placeholder: "Amount" %>
      </div>

      <span>sale</span>
       <% sale_array = [["Yes", true],["No", false]] %>
       <%= f.select "sale", options_for_select(sale_array), {}, { autofocus: 'true', class: 'form-control input-sm' } %>


      <span>Product URL</span>
      <%= f.text_field :unique_affiliate_url, class: 'form-control',  type: 'url' %>
  </div>
</div>