<%= render "templates/navigation" %>
<div class="container">
  <div class="row">
    <p><em><%= link_to "Just one item?", new_item_path %></em></p>

    <%= form_for :shop_the_look_image, url: {action: "create"}, html: {multipart: true} do |f| %>
      <div class="new_fashion_item">
        <div class="col-md-12">
          <span>Image</span>
          <%= f.file_field :shop_look_image %>
        </div>
      </div>

      <% item_count = 0 %>
      <% for item in @image_item.shop_the_look_items %>
        <div class="col-md-4">
          <% item_count +=1 %>

          <%= fields_for "shop_items[]", item do |shop_item| %>
            <h1>Item <%= item_count %></h1>
            <div class="col-md-8">

            <% gender_array = [['Mens'],["Womens"]] %>
            <span>Sex</span>
            <%= shop_item.select "gender", options_for_select(gender_array), {}, {required: 'true', autofocus: 'true', class: 'form-control input-sm gender-look new-item-look-sex-' + item_count.to_s} %>

            <span>category</span>
            <%= shop_item.select "category", options_for_select(""), {}, {required: 'true', autofocus: 'true', class: 'form-control input-sm cat-look new-item-look-category-' + item_count.to_s} %>

            <span>sub-category</span>
            <%= shop_item.select "sub_category", options_for_select(""), {}, {required: 'true', autofocus: 'true', class: 'form-control input-sm sub-cat-look new-item-look-sub-category-' + item_count.to_s} %>


            </div>
            <!-- <p>Sub-cat</p> <%= shop_item.text_field :sub_category %>
            <p>Brand</p> <%= shop_item.text_field :brand %>
            <p>Price</p> <%= shop_item.text_field :price %>
            <p>Sale</p> <%= shop_item.text_field :sale %>
            <p>Product URL</p> <%= shop_item.text_field :unique_affiliate_url %> -->
          <% end %>
        </div>
      <% end %>


      <div class="col-md-12">
        <%= submit_tag "create" %>
      </div>
    <% end %>
</div>

