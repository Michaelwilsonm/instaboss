<% all_men_brands_array = ["i love ugly", "just another fisherman", "mvmt", "moreporks", "new balance", "retromarine", "sunday somewhere","leo joseph","nike", "the modest vintage player", "bronze snake", "windsor smith", "adidas", "mj bale"] %>

<% all_women_brands_array = ["esther boutique", "mura boutique", "samantha wills","alice mccall", "auguste", "lorna jane", "seafolly", "sunday somewhere", "tony bianco", "topshop", "victoria's secret", "senso", "showpo","jo mercer", "princess polly", "new balance", "bronze snake", "cooper st"] %>

<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>

<% if @shop_the_look_image.gender == 'Mens' %>
<%= render "/templates/mobile_navigation_sliding_div_mens" %>
  <div class="item_navigation_top_mens">
    <%= render "templates/item_navigation_mens" %>
    <%= render "templates/navigation_mobile_mens" %>
  </div>
  <%= render "/templates/mobile_navigation_sliding_div_mens" %>
  <div class="mens-main-menu-side">
    <%= render "templates/side_navigation_mens" %>
  </div>
  <div class="item_navigation">
    <%= render "templates/item_navigation_mens_subcat" %>
  </div>
<% elsif @shop_the_look_image.gender == 'Womens' %>
<%= render "/templates/mobile_navigation_sliding_div_women" %>
  <div class="item_navigation_top_mens">
    <%= render "templates/item_navigation_womens" %>
    <%= render "templates/navigation_mobile_womens" %>
  </div>
  <div class="mens-main-menu-side">
    <%= render "templates/side_navigation_womens" %>
  </div>
  <div class="item_navigation">
    <%= render "templates/item_navigation_womens_subcat" %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="show-box">
      <div class="image-show-box">
        <a id="close-cross" href="<%= @back_url %>"><span></span></a>
        <%= image_tag @shop_the_look_image.shop_look_image.url(:original) %>
      </div>
      <div class="description-shop-the-look-show-box">
        <% @shop_the_look_image.shop_the_look_items.each do |shop_the_look_items| %>

          <h2 class="shop-the-look-description"><em><%= shop_the_look_items.description %></em></h2>

        <% if all_men_brands_array.include?(shop_the_look_items.brand) && @shop_the_look_image.gender == "Mens" %>
          <p><a href="<%= link_to_brand_page(shop_the_look_items.brand, @shop_the_look_image.gender) %> "><em><%= word_branding(shop_the_look_items.brand) %></em></a></p>
        <% elsif all_women_brands_array.include?(shop_the_look_items.brand) && @shop_the_look_image.gender == "Womens" %>
          <p><a href="<%= link_to_brand_page(shop_the_look_items.brand, shop_the_look_items.gender) %> "><em><%= word_branding(shop_the_look_items.brand) %></em></a></p>
        <% else %>
          <p><em><%= word_branding(shop_the_look_items.brand) %></em></p>
        <% end %>

          <p class="shop-the-look-price"><em>US $<%= zeros(shop_the_look_items.price) %></em></p>

          <div class="show-button-shop-look">
            <a href="<%= shop_the_look_items.unique_affiliate_url %>" target="_blank">
              <img src="/assets/shop now.png">
            </a>
          </div>

        <% end %>
      </div>
      <a class="arrowed" title="Back" href="<%= @back_url %>"><div class="arrow-1"></div></a>
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>