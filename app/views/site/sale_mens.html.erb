<div class="search_bar">
  <%= render "templates/men_side_search_bar" %>
</div>
<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
  <%= render "templates/navigation_mobile_mens" %>
<% end %>

<div class="item_navigation_top_mens">
  <%= render "templates/item_navigation_mens" %>
</div>
<div class="container" style="padding: 0px; margin: 0px; width: 98.8%;">
  <div class="row">
    <div class="sale_hero_mens">
    </div>
  </div>
</div>


<div class="menu-side">
  <div class="margin_menu_side"></div>
  <%= render "templates/side_navigation_mens" %>
</div>
<div class="container" style="padding: 0px;">
  <div class="row" style="margin: 0px; padding: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_womens_subcat" %>
    </div>
    <h1 class="your-items">Men's Sale</h1>
    <div class="item_sub_cat">
      <%= render "templates/sale_mens_sub_cat" %>
    </div>
    <br>
    <%= render "templates/horizontal_line" %>
    <% @sale_mens.each do |all_specials| %>
      <div class="box col-md-3 col-sm-4 col-xs-6 <%= all_specials.category %>">
        <div class="image_div">
          <a href="/item/<%= all_specials.id %>">
            <%= image_tag all_specials.item_image.url(:medium) %>
          <div class="description_content">
            <% if all_specials.sale == true %>
            <table>
              <tr class="specials_table">
                <td><strike><em>$<%= zeros(all_specials.price) %></em></strike></td>
                <td>$<%= zeros(all_specials.sale_price) %></td>
              </tr>
            </table>
            <% else %>
            <table>
              <tr class="normal_table">
                <td>$<%= all_specials.price %></td>
              </tr>
            </table>
            <% end %>
            <p><%= all_specials.short_description %></p>
            <p><%= word_branding(all_specials.brand) %></p>
          </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'templates/mail_chimp_form_mens' %>