<% all_men_brands_array = ["i love ugly", "just another fisherman", "mvmt", "moreporks", "new balance", "retromarine", "sunday somewhere","leo joseph","nike", "the modest vintage player", "bronze snake", "windsor smith", "adidas", "mj bale"] %>

<% @shop_the_look.each do |shop_the_look_items| %>
  <div class="box col-md-4 col-sm-6 col-xs-12 <%= shop_the_look_items.describe_the_look %>">
    <div class="image_div">
      <a href="/shop_the_look_images/<%= shop_the_look_items.id %>">
        <%= image_tag shop_the_look_items.shop_look_image.url(:original) %>
      <div class="description_content">
        <table>
          <tr class="shop_look_table"></tr>
        </table>
        <div class="shop-the-look-description">
          <h2>Shop The Look</h2>
          <p><%= word_branding(shop_the_look_items.shop_the_look_items.first.brand) %></p>
        </div>
      </div>
      </a>
    </div>
  </div>
  <div class="outside-container">
    <div class="image-holder">
      <%= image_tag shop_the_look_items.shop_look_image.url(:original) %>
    </div>
    <div class="on-click-enlarge">
      <span class="close-button-enlarged">X</span>
      <div class="enlarge-left">
      </div>
      <div class="enlarge-right">
      <% shop_the_look_items.shop_the_look_items.each do |j| %>
        <h2 class="shop-the-look-description"><em><%= j.description %></em></h2>
        <% if all_men_brands_array.include?(j.brand) %>
          <p><a href="<%= link_to_brand_page(j.brand, shop_the_look_items.gender) %> "><em><%= word_branding(j.brand) %></em></a></p>
        <% else %>
          <p><em><%= word_branding(j.brand) %></em></p>
        <% end %>

        <% if j.sale === true %>
          <p class="shop-the-look-price"><em><strike>AUD $<%= zeros(j.price) %></strike></em></p>
          <p class="shop-the-look-price"><em>AUD $<%= zeros(j.sale_price) %></em></p>
        <% elsif j.sale === false %>
          <p class="shop-the-look-price"><em>AUD $<%= zeros(j.price) %></em></p>
        <% else %>
          <p>!price</p>
        <% end %>

        <div class="show-button-shop-look">
          <a href="<%= j.unique_affiliate_url %>" target="_blank">
            <img src="/assets/shop now.png">
          </a>
        </div>
      <% end %>
      <div class="social-media-stl">
      <%= social_share_button_tag(shop_the_look_items.shop_the_look_items.first.brand, :url => "http://www.instaboss.co/shop_the_look_images/" + shop_the_look_items.id.to_s) %>
      </div>
      </div>
    </div>
  </div>
<% end %>