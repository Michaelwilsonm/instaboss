<% mens_categories = {'All': '/men/all', 'Accessories': '/men/accessorie', 'Formal': '/men/formal', 'Lifestyle': '/men/lifestyle', 'Longs': '/men/long' , 'Shoes': '/men/shoe' , 'Shorts & Swimwear': '/men/short_swimwear', 'Sunglasses & Watches': '/men/sunglass_watch' , 'Tops': '/men/top', 'Shop The Look': '/men/shop_the_look' }; %>

<% mens_brands = {'Adidas Originals': '/men_brand/adidas', 'Bronze Snake': '/men_brand/bronze_snake', 'I Love Ugly': '/men_brand/i_love_ugly', 'Just Another Fisherman': '/men_brand/just_another_fisherman', 'MJ Bale': '/men_brand/mj_bale', 'Moreporks': '/men_brand/morepork', 'New Balance': '/men_brand/new_balance','retromarine': '/men_brand/retro_marine', 'Sunday Somewhere': '/men_brand/sunday_somewhere', 'The Modest Vintage Player': '/men_brand/the_modest_vintage_player', 'Windsor Smith': '/men_brand/windsor_smith'} %>


<div class="container">
  <div class="row">
    <div class="mens_top">
      <%= link_to "HOME", men_path%>
      <%= link_to "ABOUT", men_about_path %>
      <div class="item_nav_top">
        <%= link_to "SHOP BY",  class: "shop_by" %>
        <div class="item_drop_shop_by" id="my_drop_down">
          <% mens_categories.each do |keys, values| %>
            <%= link_to keys, values %>
          <% end %>
        </div>
      </div>
        <%= link_to "ON SALE", site_sale_mens_path %>
      <div class="item_nav_top_brand">
        <%= link_to "BRANDS", men_brand_path, class: "shop_by_brand" %>
        <div class="item_drop_shop_by_brand" id="my_drop_down_brand">
          <% mens_brands.each do |keys, values| %>
            <%= link_to keys, values %>
          <% end %>
        <%= link_to "ALL BRANDS", men_brand_path %>
        </div>
      </div>
        <%= link_to "CONTACT", men_contact_path %>
        <div class="instagram_logo">
          <a href="https://www.instagram.com/instaboss.mens/" target="_blank">
            <img src="../assets/instagram_black.jpg" alt="insta">
          </a>
        </div>
      </div>
    </div>
  </div>
</div>