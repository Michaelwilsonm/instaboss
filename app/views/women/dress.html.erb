<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>

<div class="menu-side">
  <div class="margin_menu_side" style="margin-top: 80px;"></div>
  <%= render "templates/side_navigation_womens" %>
</div>
<div class="container" style="margin-top: -80px;">
  <div class="row" style="margin-left: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_womens_subcat" %>
    </div>
    <h1 class="your-items">Dresses</h1>
      <% @dress.each do |dress_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12">
          <div class="image_div">
            <a href="/item/<%= dress_items.id %>">
              <%= image_tag dress_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if dress_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= zeros(dress_items.price) %></em></strike></td>
                  <td>$<%= zeros(dress_items.sale_price) %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= zeros(dress_items.price) %></td>
                </tr>
              </table>
              <% end %>
              <p><%= dress_items.short_description %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>