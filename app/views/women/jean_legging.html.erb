<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>
<div class="logo-image">
  <img src="../assets/BEEEE.jpg" alt="" class="image_bee">
  <h2>WOMENS</h2>
</div>
<div class="menu-side">
  <%= render "templates/side_navigation_womens" %>
</div>
<div class="container">
  <div class="row" style="margin-left: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_womens_subcat" %>
    </div>
    <h1 class="your-items">Jeans, Trousers & Leggings</h1>
      <% @jean_legging.each do |jeans_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12">
          <div class="image_div">
            <a href="/item/<%= jeans_items.id %>">
              <%= image_tag jeans_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if jeans_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= zeros(jeans_items.sale_price) %></em></strike></td>
                  <td>$<%= zeros(jeans_items.price) %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= zeros(jeans_items.price) %></td>
                </tr>
              </table>
              <% end %>
              <p><%= jeans_items.short_description %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
