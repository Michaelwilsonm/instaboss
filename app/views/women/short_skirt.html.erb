<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>

<div class="menu-side">
  <%= render "templates/side_navigation_womens" %>
</div>
<div class="container">
  <div class="row" style="margin-left: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_womens_subcat" %>
    </div>
    <h1 class="your-items">Shorts & Skirts</h1>
      <% @short_skirt.each do |skirt_items| %>
        <div class="box col-md-4 col-sm-6 col-xs-12">
          <div class="image_div">
            <a href="/item/<%= skirt_items.id %>">
              <%= image_tag skirt_items.item_image.url(:medium) %>
            <div class="description_content">
              <% if skirt_items.sale == true %>
              <table>
                <tr class="specials_table">
                  <td><strike><em>$<%= zeros(skirt_items.price) %></em></strike></td>
                  <td>$<%= zeros(skirt_items.sale_price) %></td>
                </tr>
              </table>
              <% else %>
              <table>
                <tr class="normal_table">
                  <td>$<%= zeros(skirt_items.price) %></td>
                </tr>
              </table>
              <% end %>
              <p><%= skirt_items.short_description %></p>
            </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
