<%= render "templates/mobile_nav/navigation_main" %>
<%= render "templates/mobile_nav/navigation_mobile_womens" %>
<%= render "templates/mobile_nav/mobile_navigation_sliding_div_women" %>
<%= render "templates/womens/navigation/navigation" %>
<div class="lorna_jane_womens"></div>
<div class="desktop-categories"><h1>Lorna Jane</h1></div>
<div class="container mobile_container">
  <div class="row">
    <h1 class="your-items mob-ul">Lorna Jane</h1>
    <% @lorna_jane.each do |lorna_jane_item| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <% if lorna_jane_item.class == FashionItem %>
            <a href="/item/<%= lorna_jane_item.id %>">
              <%= image_tag lorna_jane_item.item_image.url(:medium) %>
              <div class="description_content">
                <% if lorna_jane_item.sale == true %>
                  <table>
                    <tr class="specials_table">
                    <td><strike><em>$<%= zeros(lorna_jane_item.price) %></em></strike></td>
                    <td>$<%= zeros(lorna_jane_item.sale_price) %></td>
                    </tr>
                  </table>
                <% else %>
                  <table>
                    <tr class="normal_table">
                    <td>$<%= zeros(lorna_jane_item.price) %></td>
                    </tr>
                  </table>
                <% end %>
                <p><%= lorna_jane_item.short_description %></p>
                <p><%= word_branding(lorna_jane_item.brand) %></p>
              </div>
            </a>
          <% elsif lorna_jane_item.class == ShopTheLookImage %>
            <a href="/shop_the_look_images/<%= lorna_jane_item.id %>">
              <%= image_tag lorna_jane_item.shop_look_image.url(:medium) %>
              <div class="description_content">
                <table>
                  <tr class="shop_look_table">
                  </tr>
                </table>
                <div class="shop-the-look-description">
                  <h2>Shop The Look</h2>
                  <p><%= word_branding(lorna_jane_item.shop_the_look_items.first.brand) %></p>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "templates/footer/footer_women" %>