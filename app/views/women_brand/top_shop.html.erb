<div class="search_bar">
  <%= render "templates/women_side_search_bar" %>
</div>
<% if current_admin %>
  <%= render "templates/admin_navigation" %>
<% else %>
  <%= render "templates/navigation" %>
<% end %>
<div class="container" style="padding: 0px; margin: 0px; width: 98.8%;">
  <div class="row">
    <div class="top_shop_womens">
    </div>
  </div>
</div>
<div class="mens-main-menu-side">
  <%= render "templates/side_navigation_womens" %>
</div>
<div class="container" style="padding: 0px;">
  <div class="row" style="margin: 0px; padding: 0px;">
    <div class="item_navigation">
      <%= render "templates/item_navigation_mens_subcat" %>
    </div>
    <h1 class="your-items">Top Shop</h1>
    <%= render "templates/horizontal_line" %>
    <% @top_shop.each do |top_shop_items| %>
      <div class="box col-md-4 col-sm-6 col-xs-12">
        <div class="image_div">
          <a href="/item/<%= top_shop_items.id %>">
            <%= image_tag top_shop_items.item_image.url(:medium) %>
          <div class="description_content">
            <% if top_shop_items.sale == true %>
            <table>
              <tr class="specials_table">
                <td><strike><em>$<%= zeros(top_shop_items.price) %></em></strike></td>
                <td>$<%= zeros(top_shop_items.sale_price) %></td>
              </tr>
            </table>
            <% else %>
            <table>
              <tr class="normal_table">
                <td>$<%= zeros(top_shop_items.price) %></td>
              </tr>
            </table>
            <% end %>
            <p><%= top_shop_items.short_description %></p>
            <p><%= word_branding(top_shop_items.brand) %></p>
          </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>